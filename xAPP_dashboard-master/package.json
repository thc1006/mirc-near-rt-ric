{
  "name": "o-ran-xapp-dashboard",
  "version": "1.0.0",
  "description": "O-RAN Near-RT RIC xApp Dashboard with Advanced Data Visualization",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --browsers=ChromeHeadless --watch=false --code-coverage",
    "test:watch": "ng test --code-coverage",
    "test:coverage": "ng test --browsers=ChromeHeadless --watch=false --code-coverage",
    "test:ci": "ng test --browsers=ChromeHeadless --watch=false --code-coverage",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "e2e": "cypress run",
    "e2e:open": "cypress open",
    "e2e:ci": "cypress run --browser chrome --headless",
    "e2e:headed": "cypress run --browser chrome --headed",
    "test:all": "npm run test:ci && npm run e2e:ci",
    "analyze": "ng build --stats-json && npx webpack-bundle-analyzer dist/stats.json",
    "serve:prod": "ng build --configuration production && npx http-server dist/ -p 4200",
    "format": "prettier --write \"src/**/*.{js,ts,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,json,css,scss,md}\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.3.0",
    "@angular/common": "~13.3.0",
    "@angular/compiler": "~13.3.0",
    "@angular/core": "~13.3.0",
    "@angular/forms": "~13.3.0",
    "@angular/platform-browser": "~13.3.0",
    "@angular/platform-browser-dynamic": "~13.3.0",
    "@angular/router": "~13.3.0",
    "@types/jquery": "^3.5.14",
    "jquery": "^3.6.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4",
    "d3": "^7.8.5",
    "echarts": "^5.4.3",
    "ngx-echarts": "^15.0.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.3.3",
    "@angular/cli": "~13.3.3",
    "@angular/compiler-cli": "~13.3.0",
    "@angular-eslint/builder": "~13.2.1",
    "@angular-eslint/eslint-plugin": "~13.2.1",
    "@angular-eslint/eslint-plugin-template": "~13.2.1",
    "@angular-eslint/schematics": "~13.2.1",
    "@angular-eslint/template-parser": "~13.2.1",
    "@types/d3": "^7.4.0",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "cypress": "^14.5.2",
    "eslint": "^8.57.1",
    "http-server": "^14.1.1",
    "jasmine-core": "~4.0.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "prettier": "^2.8.8",
    "typescript": "~4.6.4",
    "webpack-bundle-analyzer": "^4.9.0"
  }
}
